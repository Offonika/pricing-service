# Application
APP_PORT=18080
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pricing
POSTGRES_HOST=postgres
POSTGRES_PORT=55432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:55432/pricing

# TopControl source DB (external)
TOPCONTROL_DB_NAME=TopControl
TOPCONTROL_DB_USER=TopControl
# For passwords with special characters, use percent-encoding (e.g., @ → %40, $ → %24)
# TOPCONTROL_DB_PASSWORD=your-topcontrol-password
# TOPCONTROL_DB_HOST=77.39.29.183
# TOPCONTROL_DB_PORT=1433
# SQL Server (pytds driver): mssql+pytds://user:password@host:port/dbname
# TOPCONTROL_DATABASE_URL=mssql+pytds://TopControl:your-topcontrol-password@77.39.29.183:1433/TopControl
# TOPCONTROL_CATEGORY_WHITELIST=1,2,3  # фильтр категорий tovar.id_tovar_cat при импорте из БД
# MATCH_SUBJECT_WHITELIST=Дисплеи,Шлейфы  # фильтр по subject при матчингe (из имени товара)

# Redis÷
REDIS_HOST=redis
REDIS_PORT=16379
REDIS_URL=redis://redis:16379/0

# Competitor parsing
COMPETITOR_SOURCE_MODE=zenno  # zenno | internal
COMPETITOR_PARSE_LIMIT=10
# PROXY_API_URL=https://proxy.example.com
# PROXY_API_TOKEN=your-proxy-token
# PROXY_TIMEOUT_SECONDS=10
# PROXY_MAX_RETRIES=3
# PROXY_RPS_LIMIT=2
# COMPETITOR_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/118.0.0.0 Safari/537.36"
# COMPETITOR_ACCEPT_LANGUAGE="ru,en;q=0.9"
# COMPETITOR_COOKIES="cookie1=value; cookie2=value"
# FTP импорт прайсов конкурентов (poiskzip-moba, poiskzip-liberti)
# COMPETITOR_FTP_IMPORT_ENABLED=true
# COMPETITOR_FTP_HOST=omarit.beget.tech
# COMPETITOR_FTP_PORT=21
# COMPETITOR_FTP_USER=omarit_zen
# COMPETITOR_FTP_PASSWORD=your-password
# COMPETITOR_FTP_TLS=false
# COMPETITOR_FTP_TIMEOUT_SEC=30
# COMPETITOR_FTP_SOURCES=moba:poiskzip-moba:moba-{date}.xlsx,liberti:poiskzip-liberti:liberti-1-{date}.xlsx
# COMPETITOR_FTP_MAX_FILES_PER_SOURCE=2

# Captcha solving (2captcha/anticaptcha)
# CAPTCHA_PROVIDER=2captcha
# CAPTCHA_API_KEY=your-2captcha-key

# OpenAI / LLM (матчинг, объяснения)
OPENAI_API_KEY=your-openai-key
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o-mini

